<UserControl x:Class="WoT_Win.Creation.Views.SkillView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource ControlBackgroundBrush}">
    <StackPanel Orientation="Horizontal">
        <Label Content="{Binding Path=Name}" Style="{StaticResource LabelStyle}" Margin="4"/>
        <Image Source="{Binding Path=SmallIcon}" Width="32" Height="32" Margin="4"/>
        <Label Content="{Binding Path=Cost}" Style="{StaticResource LabelStyle}" Margin="4"/>
    </StackPanel>
</UserControl>
