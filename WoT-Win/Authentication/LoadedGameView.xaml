<UserControl x:Class="WoT_Win.Authentication.LoadedGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WoT_Win.Authentication"
             Height="110" Width="500">
    <Grid Background="{DynamicResource ControlBackgroundBrush}">
        <Image Source="{Binding Path=Faceset}" Width="96" Height="96" HorizontalAlignment="Left"/>
        <Label Content="{Binding Path=PlayerName}" Style="{StaticResource LblInGridStyle}" Width="200" Height="30" VerticalAlignment="Top" Margin="10"/>
        <Label Content="{Binding Path=AreaName}" Style="{StaticResource LblInGridStyle}" Width="200" Height="30" VerticalAlignment="Center" Margin="10"/>
        <Label Content="{Binding Path=SceneName}" Style="{StaticResource LblInGridStyle}" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10"/>
        <Label Content="{Binding Path=SavedTime}" Style="{StaticResource LblInGridStyle}" Width="200" Height="30" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</UserControl>
