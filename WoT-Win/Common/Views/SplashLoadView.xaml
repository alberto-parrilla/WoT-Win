<Window x:Class="WoT_Win.Common.Views.SplashLoadView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="350" Width="550"
        ResizeMode="NoResize" WindowStyle="None" Background="{StaticResource WindowBackgroundBrush}">
    <Grid>
        <Image Source="../../Resources/Backgrounds/background2.jpg"/>      
        <ProgressBar Width="400" Height="20" VerticalAlignment="Bottom" Margin="0,0,0,40" Value="{Binding Path=ProgressValue}" Maximum="3" Visibility="Visible"/>
        <TextBlock Text="{Binding Path=InfoText}" Width="200" Height="30" VerticalAlignment="Bottom" Margin="0,0,0,10" Foreground="White"/>
    </Grid>
</Window>
